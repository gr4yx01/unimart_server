generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model University {
  id String @id @default(cuid())
  users User[]
  name String
}

model User {
  id String @id @default(cuid())
  name String
  department String?
  university University @relation(fields: [universityId], references: [id])
  level String?
  universityId String
  phone_no String? 
  orders Order[]
}

model Vendor {
  id String @id @default(cuid())
  name String
  verified Boolean?
  phone_no String?
  rating Int?
  products Product[]
}

model Product {
  id String @id @default(cuid())
  name String
  price Int
  description String?
  image String
  vendor Vendor @relation(fields: [vendorId], references: [id])
  orders OrderItem[]
  vendorId String
  rating String?
}

model Order {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  items OrderItem[]
  status String
  total_price Int
  delivery_date DateTime
  delivery_time String
  payment_status String
}

model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
}